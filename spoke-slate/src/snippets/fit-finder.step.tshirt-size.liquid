<section
  class="
    fit-finder__item
    grid__item
    grid__item--100
    grid
    grid--gutter
    grid--column
    grid--horizontal-center
    grid--vertical-space-between
    js-enable-buttons
  "
>
  <div class="grid__container">
    <div class="fit-finder__header">
      <h3 class="fit-finder__title-italic">
        What is the most common <span class="title--secondary">t-shirt size</span> <span class="copy-divider">in your wardrobe today?</span>
      </h3>

      <!--<p class="fit-finder__byline">
        What is the most common in your wardrobe today?
      </p>-->

      <div class="fit-finder__radios grid grid--horizontal-center">
        <div class="grid__container">
          <label class="fit-finder__radio fit-finder__radio--inline radio radio--circle">
            <input
              class="radio__input js-bind__input"
              name="tshirt_size"
              type="radio"
              value="S"
              data-bind="a <strong>small</strong>"
              {% if customer.metafields.fitfinder.tshirt_size == 'S' %}
                checked
              {% endif %}
              required
            />
            <span class="radio__box">
              S
            </span>
          </label>

          <label class="fit-finder__radio fit-finder__radio--inline radio radio--circle">
            <input
              class="radio__input js-bind__input"
              name="tshirt_size"
              type="radio"
              value="M"
              data-bind="a <strong>medium</strong>"
              {% if customer.metafields.fitfinder.tshirt_size == 'M' %}
                checked
              {% endif %}
              required
            />
            <span class="radio__box">
              M
            </span>
          </label>

          <label class="fit-finder__radio fit-finder__radio--inline radio radio--circle">
            <input
              class="radio__input js-bind__input"
              name="tshirt_size"
              type="radio"
              value="L"
              data-bind="a <strong>large</strong>"
              {% if customer.metafields.fitfinder.tshirt_size == 'L' %}
                checked
              {% endif %}
              required
            />
            <span class="radio__box">
              L
            </span>
          </label>

          <label class="fit-finder__radio fit-finder__radio--inline radio radio--circle">
            <input
              class="radio__input js-bind__input"
              name="tshirt_size"
              type="radio"
              value="XL"
              data-bind="an <strong>xl</strong>"
              {% if customer.metafields.fitfinder.tshirt_size == 'XL' %}
                checked
              {% endif %}
              required
            />
            <span class="radio__box">
              XL
            </span>
          </label>

          <label class="fit-finder__radio fit-finder__radio--inline radio radio--circle">
            <input
              class="radio__input js-bind__input"
              name="tshirt_size"
              type="radio"
              value="XXL"
              data-bind="an <strong>xxl</strong>"
              {% if customer.metafields.fitfinder.tshirt_size == 'XXL' %}
                checked
              {% endif %}
              required
            />
            <span class="radio__box">
              XXL
            </span>
          </label>
        </div>
      </div>
    </div>

    <div class="fit-finder__buttons">
      <button
        class="
          fit-finder__next
          button
          button--secondary
          button--large-padding
          button--full-width
        "
        type="button"
        disabled
        data-analytics-click="Fit Finder Step Completed: Tshirt Size"
        data-analytics-props='{"category": "Fit Finder", "label": "tshirt size", "step": "tshirt size"}'
        data-analytics-dynamic-props='{"answer": "tshirt_size"}'
      >
        <span class="button__content">
          Next question
        </span>
      </button>

      <button
        class="fit-finder__previous"
        type="button"
        data-ignore="true"
      >
        {% include 'snippet.svg.icon', type:'icon', class:'arrow-previous' %}
        Back
      </button>
    </div>
  </div>
</section>
