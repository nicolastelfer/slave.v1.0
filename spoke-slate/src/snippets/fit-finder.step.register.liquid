<section
  class="
    fit-finder__item
    grid__item
    grid__item--100
    grid
    grid--gutter
    grid--column
    grid--horizontal-center
    grid--vertical-space-between
    js-enable-buttons
  "
>
  <div class="grid__container">
    <div class="fit-finder__header">
      <h3 class="fit-finder__title-italic">
        All done.
      </h3>

      <p class="fit-finder__copy">
        <strong>We told you it was quick!</strong> <br />Create an account so your results
          are saved.<br />
        We'll also drop you an email for reference.
      </p>

      <div class="fit-finder__form">
        <input
          class="form__input form__input--large"
          name="email"
          placeholder="Email address"
          type="email"
          required
          data-prefill="email"
        />

        {% include 'gdpr-fields_basic', id:'3' %}

        <button
          class="
            form__button
            button
            button--secondary
            button--large-padding
            button--full-width
          "
          type="submit"
          data-state="ready"
          data-loading-inspiration="http://codepen.io/designcouch/pen/vXrdjk"
          data-analytics-click="Fit Finder Step Completed: Register"
          data-analytics-props='{"category": "Fit Finder", "label": "register", "step": "register"}'
          disabled
        >
          <span class="button__content">
            Get my size
          </span>
          {% include 'button-loading-junk' %}
        </button>
      </div>

        <button
        class="fit-finder__previous"
        type="button"
        data-ignore="true"
      >
        {% include 'snippet.svg.icon', type:'icon', class:'arrow-previous' %}
        Back
      </button>

      <!-- TrustBox widget - Micro Combo -->
      <div class="trustpilot-widget" data-locale="en-GB" data-template-id="5419b6ffb0d04a076446a9af" data-businessunit-id="5801fde30000ff0005961054" data-style-height="20px" data-style-width="100%" data-theme="light">
        <a href="https://uk.trustpilot.com/review/spoke-london.com" target="_blank">Trustpilot</a>
      </div>
      <!-- End TrustBox widget -->
    </div>
  </div>
</section>
