{% assign active_account_nav = 'my-settings' %}

{% include 'layout.account-nav' %}

{% if customer %}
  <div
    class="
          grid__item
          grid__item--100
          grid__item--padding-top
          grid
          grid--column
        "
  >
    <div class="card grid__item grid__container grid">
      <div
        class="
              card__container
              card__container--no-bottom-border-mobile-down
              grid__container
            "
      >
        <h1
          class="
                card__section
                card__section--row
                card__section--uppercase
                card__section--strong
                grid__item
              "
        >
          My Settings
        </h1>
      </div>

      <div
        class="
              card__cta
              card__container
              card__container--no-bottom-border-mobile-down
              grid__container
            "
      >

        <div
          class="
                card__section
                card__section--no-border
                card__section--vertical-padding
                card__cta
                grid__item
                grid
                grid--column
              "
        >
          <div class="grid__container">
            <h5 class="card__cta-headline card__cta-text">Update your subscription settings:</h5>
            <form
              action="/"
              class="form js-customer-marketing"
              method="post"
            >
              <input
                name="email"
                type="hidden"
                value="{{ customer.email }}"
              />
              <input
                name="id"
                type="hidden"
                value="{{ customer.id }}"
              />
              <input
                name="permanentDomain"
                type="hidden"
                value="{{ shop.permanent_domain }}"
              />

              {% include 'gdpr-fields' %}

              <button
                class="
                  form__button
                  button
                  button--primary
                  button--large-padding
                  card__cta-button-margin
                "
                type="submit"
                data-state="ready"
                data-loading-inspiration="http://codepen.io/designcouch/pen/vXrdjk"
              >
                <span class="button__content">
                  Save
                </span>
                {% include 'button-loading-junk' %}
              </button>

            </form>

          </div>
        </div>
      </div>
    </div>


  </div>
{% else %}
  <section
    class="
    grid
    grid--grey
    grid--padding-bottom
    grid--horizontal-center
    grid--full-width
  "
  >
    <div class="grid__container">
      <div
        class="
          grid__item
          grid__item--100
          grid__item--padding-top
          grid
          grid--gutter-desktop-up
          grid--column
        "
      >
        <div class="card card--horizontal-start grid__item grid__container grid">
          <div
            class="
                card__section
                card__section--center-mobile-down
                card__section--no-border
                card__section--vertical-padding
                grid__item
                grid
                grid--column
                grid--horizontal-start-tablet-up
                grid--horizontal-center-mobile-down
              "
          >
            <div class="grid__container">
              <p class="card__cta-text grid__item">
                <a
                  class="link--inline"
                  href="/account/login"
                >
                  Log in
                </a> to view My Settings.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}
{% include 'log-out-mobile' %}